<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:id="@+id/tab5Layout" android:orientation="vertical"
	android:background="@drawable/guides">
		<LinearLayout 
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:text="Please select a source:"
    />

    <Spinner 
        android:id="@+id/spinner10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/dtc_prompt"
    />
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:text="Please select a destination:"
    />

    <Spinner 
        android:id="@+id/spinner00"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:prompt="@string/dtc1_prompt"
    />
<Button 
android:text="Get Bus No" 
android:id="@+id/bdtc"
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
</Button>



</LinearLayout>

</RelativeLayout>
